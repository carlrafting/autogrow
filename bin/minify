#!/usr/bin/env sh

NAME=autogrow
INPUT=$PWD/$NAME
OUTPUT=$PWD/$NAME.min

if [[ -x /usr/local/bin/uglifyjs ]]; then
  uglifyjs $INPUT.js -c -m -o $OUTPUT.js
else
  echo "Cannot minify JavaScript because UglifyJS is not installed!"
fi

if [[ -x /usr/local/bin/csso ]]; then
  csso $INPUT.css -o $OUTPUT.css
else
  echo "Cannot minify CSS because CSSO is not installed!"
fi
